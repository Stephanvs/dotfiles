{
  "$schema": "https://opencode.ai/config.json",
  "theme": "catppuccin",
  "layout": "stretch",
  "model": "anthropic/claude-sonnet-4-20250514",
  "autoshare": true,
  "autoupdate": true,
  "provider": {
    "lmstudio-homepc": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "LM Studio (homepc)",
      "options": {
        "baseURL": "http://100.84.112.43:1234/v1"
      },
      "models": {
        "mistralai/devstral-small-2507": {
          "name": "Devstral Small 2507"
        }
      }
    },
    "lmstudio-mini": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "LM Studio (mini)",
      "options": {
        "baseURL": "http://100.71.230.81:1234/v1"
      },
      "models": {
        "mistralai/devstral-small-2507": {
          "name": "Devstral Small 2507"
        },
        "qwen/qwen3-coder-30b": {
          "name": "Qwen 3 Coder 30b"
        }
      }
    },
    "lmstudio": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "LM Studio (local)",
      "options": {
        "baseURL": "http://127.0.0.1:1234/v1"
      },
      "models": {
        "mistralai/devstral-small-2507": {
          "name": "Devstral Small 2507"
        }
      }
    },
    "xai": {
      "name": "X.ai",
      "models": {}
    },
    "openrouter": {
      "name": "OpenRouter",
      "models": {}
    }
  },
  "disabled_providers": ["openai"],
  "mode": {
    "build": {
      "model": "opencode/grok-code"
    },
    "plan": {
      "model": "google/gemini-2.5-pro",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false
      }
    },
    "docs": {
      "prompt": "{file:./prompts/documentation.txt}",
      "tools": {
        "write": true,
        "edit": true,
        "bash": false,
        "read": true,
        "grep": true,
        "glob": true
      }
    },
    "review": {
      "prompt": "{file:./prompts/code_review.txt}",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false,
        "read": true,
        "glob": true,
        "grep": true,
        "list": true,
        "webfetch": true
      }
    }
  },
  "keybinds": {
    "leader": "ctrl+x"
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true
    },
    "whatsapp": {
      "type": "remote",
      "url": "",
      "enabled": false
    }
  }
}
