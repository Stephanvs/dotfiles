{
  "$schema": "https://opencode.ai/config.json",
  "layout": "stretch",
  "model": "openai/gpt-5.3-codex",
  "small_model": "opencode/gpt-5-nano",
  "autoshare": true,
  "autoupdate": false,
  "plugin": [
    "opencode-sfx"
  ],
  "provider": {
    "lmstudio-homepc": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "LM Studio (homepc)",
      "options": {
        "baseURL": "http://100.84.112.43:1234/v1"
      },
      "models": {
        "mistralai/devstral-small-2507": {
          "name": "Devstral Small 2507"
        }
      }
    },
    "lmstudio-mini": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "LM Studio (mini)",
      "options": {
        "baseURL": "http://100.71.230.81:1234/v1"
      },
      "models": {
        "mistralai/devstral-small-2507": {
          "name": "Devstral Small 2507"
        },
        "qwen/qwen3-coder-30b": {
          "name": "Qwen 3 Coder 30b"
        }
      }
    },
    "lmstudio": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "LM Studio (local)",
      "options": {
        "baseURL": "http://127.0.0.1:1234/v1"
      },
      "models": {
        "mistralai/devstral-small-2507": {
          "name": "Devstral Small 2507"
        }
      }
    }
  },
  "disabled_providers": [],
  "mode": {
    "plan": {
      "tools": {
        "write": false,
        "edit": false,
        "bash": false,
        "read": true,
        "grep": true,
        "glob": true,
        "list": true,
        "webfetch": true
      }
    },
    "docs": {
      "prompt": "{file:./prompts/documentation.txt}",
      "tools": {
        "write": true,
        "edit": true,
        "bash": false,
        "read": true,
        "grep": true,
        "glob": true
      }
    },
    "review": {
      "prompt": "{file:./prompts/code_review.txt}",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false,
        "read": true,
        "glob": true,
        "grep": true,
        "list": true,
        "webfetch": true
      }
    }
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true
    },
    "az-devops": {
      "type": "local",
      "command": ["bunx", "-y", "@azure-devops/mcp", "itncare", "-d", "core", "work", "work-items", "repositories", "pipelines", "wiki"],
      "enabled": false
    },
    "atlassian": {
      "type": "local",
      "enabled": false,
      "command": [
        "op", "run", "--",
        "docker", "run", "-i", "--rm", "--network=host",
        "-e", "CONFLUENCE_URL",
        "-e", "CONFLUENCE_USERNAME",
        "-e", "CONFLUENCE_API_TOKEN",
        "-e", "JIRA_URL",
        "-e", "JIRA_USERNAME",
        "-e", "JIRA_API_TOKEN",
        "ghcr.io/sooperset/mcp-atlassian:latest"
      ],
      "environment": {
        "CONFLUENCE_URL": "https://prosim.atlassian.net/wiki",
        "CONFLUENCE_USERNAME": "stephan.van.stekelenburg@prosim-ar.com",
        "CONFLUENCE_API_TOKEN": "op://ProSIM/2niy3vs6lrbipxhqqtme33ca3m/opencode api token",
        "JIRA_URL": "https://prosim.atlassian.net",
        "JIRA_USERNAME": "stephan.van.stekelenburg@prosim-ar.com",
        "JIRA_API_TOKEN": "op://ProSIM/2niy3vs6lrbipxhqqtme33ca3m/opencode api token"
      }
    },
    "teamcity": {
      "type": "local",
      "command": [
        "op", "run", "--env-file", "/home/stephanvs/dotfiles/opencode/teamcity.env", "--",
        "bunx", "-y", "@daghis/teamcity-mcp", "--config", "/home/stephanvs/dotfiles/opencode/teamcity.env"
      ],
      "enabled": false
    },
    "xcodebuild": {
      "type": "local",
      "command": ["bunx", "-y", "xcodebuildmcp@latest", "mcp"],
      "enabled": false
    },
    "gh_grep": {
      "type": "remote",
      "url": "https://mcp.grep.app",
      "enabled": true
    }
  }
}
