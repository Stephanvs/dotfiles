{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "background": "#2f2f2f",
          "foreground": "#9FD356",
          "foreground_templates": [
            "{{ if gt .Code 0 }}#E84855{{ end }}"
          ],
          "properties": {
            "always_enabled": true
          },
          "style": "plain",
          "type": "exit"
        },
        {
          "background": "#2f2f2f",
          "foreground": "#26C6DA",
          "properties": {
            "alpine": "\uf300",
            "arch": "\uf303",
            "centos": "\uf304",
            "debian": "\uf306",
            "elementary": "\uf309",
            "fedora": "\uf30a",
            "gentoo": "\uf30d",
            "linux": "\ue712",
            "macos": "\ue711",
            "manjaro": "\uf312",
            "mint": "\uf30f",
            "opensuse": "\uf314",
            "raspbian": "\uf315",
            "ubuntu": "\uf31c",
            "windows": "\ue70f"
          },
          "style": "diamond",
          "type": "os"
        },
        {
          "background": "#2f2f2f",
          "foreground": "#fafafa",
          "style": "diamond",
          "type": "session"
        },
        {
          "background": "#2f2f2f",
          "foreground": "#ffff66",
          "style": "diamond",
          "type": "root"
        },
        {
          "background": "#2f2f2f",
          "foreground": "#ff479c",
          "properties": {
            "folder_icon": "<#B5B2C2> \ue5fe </>",
            "style": "agnoster"
          },
          "style": "diamond",
          "type": "path"
        },
        {
          "background": "#2f2f2f",
          "foreground": "#ffeb3b",
          "foreground_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#ffeb3b{{ end }}",
            "{{ if gt .Ahead 0 }}#2EC4B6{{ end }}",
            "{{ if gt .Behind 0 }}#8A4FFF{{ end }}"
          ],
          "properties": {
            "fetch_stash_count": true,
            "fetch_status": true,
            "fetch_upstream_icon": true
          },
          "style": "diamond",
          "type": "git"
        },
        {
          "background": "#2f2f2f",
          "foreground": "#6CA35E",
          "style": "diamond",
          "type": "node"
        },
        {
          "background": "#2f2f2f",
          "foreground": "#6CA35E",
          "style": "diamond",
          "type": "dotnet"
        },
        {
          "background": "#2f2f2f",
          "foreground": "#fafafa",
          "style": "diamond",
          "type": "text"
        },
        {
          "foreground": "#FFCE5C",
          "properties": {
            "style": "roundrock",
            "threshold": 500
          },
          "style": "plain",
          "type": "executiontime"
        },
        {
          "background": "#2f2f2f",
          "foreground": "#adadad",
          "properties": {
            "time_format": "15:04:05"
          },
          "style": "powerline",
          "type": "time"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "#7a7a7a",
          "style": "plain",
          "type": "text"
        }
      ],
      "type": "prompt"
    }
  ],
  "console_title_template": "{{if .Root}}root :: {{end}}{{.Shell}} :: {{.Folder}}",
  "final_space": true,
  "version": 1
}
