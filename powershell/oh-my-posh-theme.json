{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "final_space": true,
  "console_title": true,
  "console_title_style": "template",
  "console_title_template": "{{if .Root}}root :: {{end}}{{.Shell}} :: {{.Folder}}",
  "version": 1,
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "horizontal_offset": 0,
      "vertical_offset": 0,
      "segments": [
        {
          "background": "#2f2f2f",
          "foreground": "#9FD356",
          "foreground_templates": ["{{ if gt .Code 0 }}#E84855{{ end }}"],
          "properties": {
            "always_enabled": true,
            "template": " \uf705 {{ if gt .Code 0 }}{{ .Code }}{{ end }} "
          },
          "style": "plain",
          "type": "exit"
        },
        {
          "background": "#2f2f2f",
          "foreground": "#26C6DA",
          "properties": {
            "alpine": "\uf300",
            "arch": "\uf303",
            "centos": "\uf304",
            "debian": "\uf306",
            "elementary": "\uf309",
            "fedora": "\uf30a",
            "gentoo": "\uf30d",
            "linux": "\ue712",
            "macos": "\ue711",
            "manjaro": "\uf312",
            "mint": "\uf30f",
            "opensuse": "\uf314",
            "raspbian": "\uf315",
            "template": " {{ if .WSL }}\ue712 on {{ end }}{{ .Icon }}<#7a7a7a> \ue0b1</>",
            "ubuntu": "\uf31c",
            "windows": "\ue70f"
          },
          "style": "diamond",
          "type": "os"
        },
        {
          "background": "#2f2f2f",
          "foreground": "#fafafa",
          "properties": {
            "template": " {{ if ne .Env.POSH_SESSION_DEFAULT_USER .UserName }}<#77f5d6>{{ .UserName }}</><#7a7a7a>\uf1fa</><#2EEFBF>{{ .HostName }}{{ end }}</><#7a7a7a> \ue0b1</>"
          },
          "style": "diamond",
          "type": "session"
        },
        {
          "background": "#2f2f2f",
          "foreground": "#ffff66",
          "properties": {
            "template": " \uf0e7<#7a7a7a> \ue0b1</>"
          },
          "style": "diamond",
          "type": "root"
        },
        {
          "background": "#2f2f2f",
          "foreground": "#ff479c",
          "properties": {
            "folder_icon": "<#B5B2C2> \ue5fe </>",
            "style": "agnoster",
            "template": "<#f2f200> \ue5ff </>{{ .Path }} "
          },
          "style": "diamond",
          "type": "path"
        },
        {
          "background": "#2f2f2f",
          "foreground": "#ffeb3b",
          "foreground_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#ffeb3b{{ end }}",
            "{{ if gt .Ahead 0 }}#2EC4B6{{ end }}",
            "{{ if gt .Behind 0 }}#8A4FFF{{ end }}"
          ],
          "properties": {
            "fetch_stash_count": true,
            "fetch_status": true,
            "fetch_upstream_icon": true,
            "template": "<#7a7a7a>\ue0b1 </>{{ .UpstreamIcon }}{{ .HEAD }}{{ .BranchStatus }}{{ if .Working.Changed }}<#E84855> \uf044 {{ .Working.String }}</>{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }}<#2FDA4E> \uf046 {{ .Staging.String }}</>{{ end }}{{ if gt .StashCount 0 }} \uf692 {{ .StashCount }}{{ end }} "
          },
          "style": "diamond",
          "type": "git"
        },
        {
          "background": "#2f2f2f",
          "foreground": "#6CA35E",
          "properties": {
            "template": " \ue718 {{ if .PackageManagerIcon }}{{ .PackageManagerIcon }} {{ end }}{{ .Full }}<#7a7a7a> \ue0b3</>"
          },
          "style": "diamond",
          "type": "node"
        },
        {
          "background": "#2f2f2f",
          "foreground": "#6CA35E",
          "properties": {
            "template": " îœŒ {{ if .Unsupported }}\uf071{{ else }}{{ .Full }}{{ end }}<#7a7a7a> \ue0b1</>"
          },
          "style": "diamond",
          "type": "dotnet"
        },
        {
          "background": "#2f2f2f",
          "foreground": "#fafafa",
          "properties": {
            "template": ""
          },
          "style": "diamond",
          "type": "text"
        },
        {
          "foreground": "#FFCE5C",
          "properties": {
            "style": "roundrock",
            "template": " {{ .FormattedMs }}<#fafafa> \uf252 </>",
            "threshold": 500
          },
          "style": "plain",
          "type": "executiontime"
        },
        {
          "type": "time",
          "style": "powerline",
          "background": "#2f2f2f",
          "foreground": "#adadad",
          "properties": {
            "template": " {{ .CurrentDate | date .Format }}<#007ACC> \uf64f </>",
            "time_format": "15:04:05"
          }
        }
      ]
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "#7a7a7a",
          "properties": {
            "template": " ~#@\u276f "
          },
          "style": "plain",
          "type": "text"
        }
      ],
      "type": "prompt"
    }
  ]
}
